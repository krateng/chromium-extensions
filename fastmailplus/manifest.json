{
	"name": "Fastmail++",
	"version": "0.1",
	"description": "Improves the Fastmail web interface",
	"manifest_version": 2,
	"permissions": ["activeTab",
		"declarativeContent",
		"tabs",
		"storage",
		"https://www.fastmail.com/settings*"
	],
	"background":
	{
		"scripts":
		[
			"background.js"
		]
	},


	"browser_action":
	{
		"default_icon":
		{
			"128":"icon128.png",
			"48":"icon48.png"
		}
	},
	"icons":
		{
			"128":"icon128.png",
			"48":"icon48.png"
		}
}
